{
  "coc": {
    "preferences": {
      "formatOnSaveFiletypes": ["css", "markdown", "javascript", "typescript", "javascriptreact", "typescriptreact"]
    }
  },
  "tsserver": {
    "enable": true,
    "formatOnType": false,
    "autoClosingTags": false,
  },
  "eslint": {
    "enable": true,
    "packageManager": "yarn",
    "alwaysShowStatus": true,
    "run": "onSave",
    "autoFixOnSave": true
  },
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    }
  }
}
