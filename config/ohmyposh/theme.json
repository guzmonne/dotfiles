{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#73daca",
          "style": "plain",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "#a9b1d6",
          "properties": {
            "command": "pwd | sed \"s|$HOME|~|\" | sed 's|/branches/| $(print -P %F{255}\ufb44%f) |'",
            "shell": "zsh"
          },
          "style": "plain",
          "type": "command"
        },
        {
          "foreground": "#ffe873",
          "properties": {
            "command": "if [ -f './.python-version' ]; then echo  $(/bin/cat ./.python-version); fi",
            "shell": "zsh"
          },
          "style": "plain",
          "type": "command"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#ffffff",
          "properties": {
            "command": "if [ -d './.git' ]; then git branch --no-color --show-current; else true; fi",
            "shell": "zsh"
          },
          "style": "plain",
          "template": "\ue709 {{ .Output }}",
          "type": "command"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#6CA35E",
          "powerline_symbol": "\ue0b0",
          "style": "plain",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        },
        {
          "foreground": "#9ece6a",
          "properties": {
            "style": "austin"
          },
          "style": "plain",
          "template": " {{ .FormattedMs }} ",
          "type": "executiontime"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#FFA400",
          "properties": {
            "command": "if [[ -n $AWS_PROFILE ]]; then echo \" $AWS_PROFILE ($AWS_REGION)\" ; fi",
            "shell": "zsh"
          },
          "style": "plain",
          "type": "command"
        },
        {
          "foreground": "#7dcfff",
          "properties": {
            "command": "if [[ -n \"$(rg \"current-context: .*$\" ~/.kube/config)\" ]]; then echo \" $(rg 'current-context: .*$' ~/.kube/config | sed -e 's|current-context: ||')\" ; fi",
            "shell": "zsh"
          },
          "style": "plain",
          "type": "command"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#9d7cd8",
          "foreground_templates": ["{{ if gt .Code 0 }}#ff007c{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\u276f ",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}}(Admin){{end}} {{.PWD}}",
  "version": 2
}
