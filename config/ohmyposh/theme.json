{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#73daca",
          "style": "plain",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "#a9b1d6",
          "properties": {
            "style": "full"
          },
          "style": "powerline",
          "template": "{{ if matchP \"/branches/\" .Path }}{{ .Path | replace \"/branches/\" \" <#FFFFFF>פּ</> \" }}{{ else }}{{ .Path }}{{ end }}",
          "type": "path"
        },
        {
          "foreground": "#ffffff",
          "properties": {
            "command": "if git rev-parse --is-inside-work-tree > /dev/null 2>&1; then printf \"\ue709 %s\" $(git branch --no-color --show-current); fi",
            "shell": "zsh"
          },
          "style": "plain",
          "type": "command"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#ffe873",
          "properties": {
            "command": "if [ -f './.python-version' ]; then echo  $(/bin/cat ./.python-version); elif [ -n \"$VIRTUAL_ENV_PROMPT\" ]; then echo \" $VIRTUAL_ENV_PROMPT\"; fi",
            "shell": "zsh"
          },
          "style": "plain",
          "type": "command"
        },
        {
          "foreground": "#6CA35E",
          "powerline_symbol": "\ue0b0",
          "style": "plain",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        },
        {
          "foreground": "#FFA400",
          "properties": {
            "command": "if [[ -n $AWS_PROFILE ]]; then echo \" $AWS_PROFILE ($AWS_REGION)\" ; fi",
            "shell": "zsh"
          },
          "style": "plain",
          "type": "command"
        },
        {
          "foreground": "#7dcfff",
          "properties": {
            "command": "if [[ -n \"$(rg \"current-context: .*$\" ~/.kube/config)\" ]]; then echo \" $(rg 'current-context: .*$' ~/.kube/config | sed -e 's|current-context: ||' | tr -d ' ')\" ; fi",
            "shell": "zsh"
          },
          "style": "plain",
          "type": "command"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#9d7cd8",
          "foreground_templates": ["{{ if gt .Code 0 }}#ff007c{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\u276f",
          "type": "session"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "console_title_template": "{{if .Root}}(Admin){{end}} {{.PWD}}",
  "version": 2
}
